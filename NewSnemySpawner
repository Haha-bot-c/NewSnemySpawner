using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class NewEnemySpawner : MonoBehaviour
{
    [SerializeField] private List<EnemyMovementTarget> _enemyPrefab;
    [SerializeField] private List<Transform> _spawnPoints;
    [SerializeField] private List<Transform> _target;
    [SerializeField] private float _spawnInterval = 2.0f;

    private void Start()
    {
        StartCoroutine(SpawnEnemies());
    }

    private IEnumerator SpawnEnemies()
    {
        WaitForSeconds wait = new WaitForSeconds(_spawnInterval);

        while (true)
        {
            int randomIndex = Random.Range(0, _spawnPoints.Count);

            Transform spawnPoint = _spawnPoints[randomIndex];

            EnemyMovementTarget enemy = Instantiate(_enemyPrefab[randomIndex], spawnPoint.position, spawnPoint.rotation);

            EnemyMovementTarget enemyMovement = enemy.GetComponent<EnemyMovementTarget>();

            enemyMovement._target = _target[randomIndex];

            yield return wait;
        }
    }
}
